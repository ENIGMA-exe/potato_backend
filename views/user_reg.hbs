<style>
    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    .signup {
        background-color: white;
        position: relative;
        width: 35%;
        height: 80%;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .close{
        cursor: pointer;
        width: 15%;
        height: 6%;
        font-family: sans-serif;
        font-size: 1.3rem;
        font-weight: bold;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 20px;
        position: absolute;
        top: 1.5%;
        right: 3%;
        color: white;
        background-image: linear-gradient(to right, rgb(37, 37, 201), rgb(120, 45, 190));
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
     }
    .signup>p {
        font-family: sans-serif;
        font-size: 2rem;
        font-weight: bold;
        margin-top: 7%;
        margin-bottom: 6%;
        color: black;
    }

    .fillup {
        width: 95%;
        height: 9%;
        margin-bottom: 5%;
        display: flex;
        align-items: center;
        justify-content: space-evenly;
        border-radius: 40px;
        background-color: white;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }

    .fillup>i {
        font-size: 2rem;
        color: rgb(113, 46, 236);
    }

    .fillup>input {
        width: 85%;
        height: 100%;
        font-size: 1.2rem;
        text-align: left;
        padding-left: 1%;
        border-radius: 40px;
        outline: none;
        border: none;
    }

    .signup>button {
        width: 30%;
        height: 8%;
        border: none;
        border-radius: 40px;
        font-size: 1.2rem;
        font-weight: bold;
        margin-top: 2%;
        cursor: pointer;
        color: white;
        background-image: linear-gradient(to right, rgb(37, 37, 201), rgb(120, 45, 190));
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }
    @media screen and (max-width:1085px){
        .close{
            width: 18%;
            height: 7%;
            font-size: 1.1rem;
        }
        .signup>p{
            font-size: 1.7rem;
            margin-top: 10%;
            margin-bottom: 5%;
        }
    }
    @media screen and (max-width:992px){
        .signup>p{
            margin-top: 15%;
        }
        .fillup>input{
            font-size: 1.1rem;
        }
    }
    @media screen and (max-width:845px){
        .fillup>i{
            font-size: 1.6rem;
        }
    }
    @media screen and (max-width:810px){
        .signup{
            width: 45%;
        }
    }
    @media screen and (max-width:626px){
        .signup{
            width: 50%;
        }
    }
    @media screen and (max-width:610px){
        .signup{
            width: 65%;
        }
    }
    @media screen and (max-width:490px){
        .signup{
            width: 85%;
        }
        .signup>p{
            margin-top: 18%;
        }
    }
    @media screen and (max-width:376px){
        .signup{
            width: 95%;
            height: 70%;
        }
        .signup>p{
            margin-top: 20%;
        }
    }
</style>
<div class="signup">
    <div class="close" onclick="close_modal()">close</div>
    <p>lets join Potato!</p>

    <div class="fillup">
        <i class="fas fa-users"></i>
        <input id="user_f_name" name="user_f_name" type="text" placeholder="First Name">
    </div>

    <div class="fillup">
        <i class="fas fa-users"></i>
        <input id="user_l_name" name="user_l_name" type="text" placeholder="Last Name" required autocomplete="off">
    </div>

    <div class="fillup">
        <i class="fas fa-envelope"></i>
        <input id="user_em" name="user_em" type="text" placeholder="Email" required autocomplete="off">
    </div>

    <div class="fillup">
        <i class="fas fa-lock"></i>
        <input id="user_pass" name="user_pass" type="password" placeholder="Password" required autocomplete="off">
    </div>

    <div class="fillup">
        <i class="fas fa-lock"></i>
        <input id="user_pass_2" name="user_pass_2" type="password" placeholder="Password(re type)" required autocomplete="off">
    </div>

    <button onclick="user_reg()">Register</button>

</div>
