                <i class="fas fa-users"></i>
                <input id="s_id" name="user_f_name" type="text" placeholder="seies Id">
            </div>

            <div class="border">
                <div class="b_line"></div>
                OR
                <div class="b_line"></div>
            </div>

            <div class="fillup">
                <i class="fas fa-users"></i>
                <input id="s_name" name="user_f_name" type="text" placeholder="seies Name">
            </div>
