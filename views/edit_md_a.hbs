<style>
    .main_md_a {
        width: 30%;
        height: 60%;
        background-color: white;
        color: black;
        display: flex;
        flex-direction: column;
        position: relative;
        align-items: center;
        justify-content: center;
    }

    .main_md_a>.close {
        cursor: pointer;
        width: 18%;
        height: 8%;
        font-family: sans-serif;
        font-size: 1.3rem;
        font-weight: bold;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 20px;
        position: absolute;
        top: 1.5%;
        right: 3%;
        color: white;
        background-image: linear-gradient(to right, rgb(37, 37, 201), rgb(120, 45, 190));
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }

    .fillup {
        width: 95%;
        height: 13%;
        margin-bottom: 5%;
        display: flex;
        align-items: center;
        justify-content: space-evenly;
        border-radius: 40px;
        background-color: white;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }

    .fillup>i {
        font-size: 2rem;
        color: rgb(113, 46, 236);
    }

    .fillup>input {
        width: 85%;
        height: 100%;
        font-size: 1.2rem;
        text-align: left;
        padding-left: 1%;
        border-radius: 40px;
        outline: none;
        border: none;
        background: transparent;
    }

    .main_md_a>.border {
        width: 100%;
        height: 5%;
        /*border: 1px solid black;*/
        margin-bottom: 5%;
        display: flex;
        align-items: center;
        justify-content: space-evenly;
        font-family: sans-serif;
        font-weight: bold;
        color: rgba(87, 86, 86, 0.589);
    }

    .main_md_a>.border>.b_line {
        width: 40%;
        height: 30%;
        border-radius: 40px;
        background-color: rgba(87, 86, 86, 0.514);
    }

    .main_md_a>button {
        width: 30%;
        height: 10%;
        border: none;
        border-radius: 40px;
        font-size: 1.2rem;
        font-weight: bold;
        /*margin-top: 1%;*/
        cursor: pointer;
        color: white;
        background-image: linear-gradient(to right, rgb(37, 37, 201), rgb(120, 45, 190));
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }
     @media screen and (max-width:1020px){
        .main_md_a>.close{
            width: 20%;
        }
        .main_md_a>button {
            width: 40%;
        }
    }
    @media screen and (max-width:945px){
        .main_md_a{
            width: 40%;
        }
    }
    @media screen and (max-width:700px){
        .main_md_a{
            width: 45%;
        }
    }
    @media screen and (max-width:640px){
        .main_md_a{
            width: 50%;
        }
    }
    @media screen and (max-width:540px){
        .main_md_a{
            width: 60%;
        }
    }
    @media screen and (max-width:450px){
        .main_md_a{
            width: 70%;
        }
        .fillup>i{
            font-size: 1.5rem;
        }
        .fillup>input{
            font-size: 1rem;
        }
    }
    @media screen and (max-width:390px){
        .main_md_a>.close{
            width: 30%;
            height: 10%;
        }
        .main_md_a{
            width: 80%;
        }
        .main_md_a>button{
            margin-top: 10%;
        }
    }
    @media screen and (max-width:350px){
        .main_md_a{
            width: 90%;
        }
    }
</style>

